@using EntityLayer.Concrete
@model Alan

@{
    ViewBag.Title = "KitapEkle";
    Layout = "~/Views/Shared/_LayoutLeftBar.cshtml";
}

@{
    var date = DateTime.Now;
    var formattedDate = $"{date:yyyy-MM-ddTHH:mm}";
}

<div class="container pt-4 mb-3">
    <h3>Kitap Ekle</h3>

    <form action="KitapEkle" method="post" enctype="multipart/form-data">
        @Html.Label("AlanId")
        @Html.DropDownListFor(x => x.AlanId, (List<SelectListItem>)ViewBag.Dlist, new { @class = "form-control" })

        @*@Html.Label("AlanName")
        <input name="Alan.AlanName" value="@Model.AlanName" readonly />*@

        @Html.Label("YazarAdı")
        <input type="text" name="Yazar.YazarName" class="form-control" />

        @Html.Label("YazarDogumTarih")
        <input type="datetime-local" name="Yazar.YazarDTarih" value="@formattedDate" class="form-control w-25" />

        @Html.Label("KitapAdı")
        <input type="text" name="KitapName" class="form-control" />

        @Html.Label("Kitap Dosyası")
        <input type="file" name="kitapDosya" class="form-control-file" />

        <button class="btn btn-outline-primary mt-3">Ekle</button>
    </form>
</div>


